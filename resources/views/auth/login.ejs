<section class="login flex justify-center">

    <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8 ">
            <div>
                <img class="mx-auto h-12 w-auto" src="/images/logo.png" alt="Your Company">
                <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Log In to your account
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600"></p>
            </div>
            <form class="mt-8 space-y-6 " action="/login" method="POST">

                <% if(messages.error) {%>
                    <span class="text-red-500 text-sm">
                        <%= messages.error %>
                    </span>
                    <% } %>

                        <div class="-space-y-px rounded-md shadow-sm">
                            <div class="">
                                <label for="email-address" class="sr-only">Email address</label>
                                <input id="email-address" name="email" type="email" autocomplete="email" required
                                    class="textbox relative block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 sm:text-sm sm:leading-6 pl-2"
                                    placeholder="Email address">
                            </div>
                            <div class="py-2">
                                <label for="password" class="sr-only">Password</label>
                                <input id="password" name="password" type="password" autocomplete="current-password"
                                    required
                                    class="textbox relative block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 sm:text-sm sm:leading-6 pl-2"
                                    placeholder="Password">
                            </div>
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <input id="remember-me" name="remember-me" type="checkbox"
                                    class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                                <label for="remember-me" class="ml-2 block text-sm text-gray-900">Remember me</label>
                            </div>

                            <div class="text-sm">
                                <a href="/forget" class="font-medium text-indigo-600 hover:text-indigo-500">Forgot your
                                    password?</a>
                            </div>
                        </div>
                        <div>
                            <button type="submit"
                                class="group relative flex w-full justify-center rounded-md  py-2 px-3 text-md tracking-wider font-semibold">
                                <span class=" absolute inset-y-0 left-0 flex items-center pl-3">
                                    <svg class="icon h-5 w-5 text-indigo-500 group-hover:text-indigo-400"
                                        viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd"
                                            d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                                            clip-rule="evenodd" />
                                    </svg>
                                </span>
                                Log In
                            </button>
                        </div>
            </form>
        </div>
    </div>

</section>