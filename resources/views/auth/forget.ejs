<section class="login flex justify-center">

    <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8 ">

            <div>
                <img class="mx-auto h-12 w-auto" src="/images/logo.png" alt="Your Company">
                <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Forget Password
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600"></p>
            </div>

            <form class="mt-8" action="#" method="POST">
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm">
                    <div>
                        <label for="email-address" class="sr-only">Email address</label>
                        <input id="email-address" name="email" type="email" autocomplete="email" required
                            class="textbox relative block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 sm:text-sm sm:leading-6 pl-2"
                            placeholder="Email address">
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit"
                        class="group relative flex w-full justify-center rounded-md  py-2 px-3 text-md tracking-wider font-semibold">
                        <span class=" absolute inset-y-0 left-0 flex items-center pl-3"></span>
                        Send OTP
                    </button>
                </div>
            </form>
        </div>
    </div>

</section>