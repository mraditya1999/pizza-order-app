<!-- Hero Section -->
<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are You hungry?‚òπÔ∏è</em></h6>
            <h1 class="text-6xl font-bold">Don't Wait !üëª</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
        </div>

        <div class="w-1/2">
            <img src="/images/hero-pizza.png" alt="hero-pizza">
        </div>
    </div>
</section>

<!-- Menu -->
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
    <div class="grid grid-cols-4 gap-x-10 gap-y-16">
        <% pizzas.forEach(function(pizza){ %>

            <div
                class=" single-card-item transition-all duration-500  ease-in-out border-2 border-slate-200 hover:scale-105 shadow-md hover:shadow-lg px-2 py-4 rounded-md ">

                <img class="h-40 mb-4 mx-auto" src="/images/<%= pizza.image %>" alt="<%= pizza.name %>">
                <div class="text-center">
                    <h2 class="mb-4 text-lg">
                        <%=pizza.name%>
                    </h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs font-bold">
                        <%=pizza.size%>
                    </span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">‚Çπ <%=pizza.price %></span>
                        <button data-item="<%= JSON.stringify(pizza) %>"
                            class="add-to-cart flex items-center py-1 px-6 rounded-full">
                            <span>+</span>
                            <span class="ml-4">ADD</span>
                        </button>
                    </div>
                </div>
            </div>

            <% }) %>

    </div>
</section>