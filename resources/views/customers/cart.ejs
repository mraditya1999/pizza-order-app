<!-- Cart Section -->
<section class="cart py-16">

    <% if(session.cart) { %>
        <!-- Cart -->
        <div class="order container mx-auto xl:w-1/2">

            <!-- Cart Header -->
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="/images/cart-black.png" alt="blank-cart">
                <h1 class="font-bold ml-4 text-2xl ">Order Summary</h1>
            </div>

            <!-- Cart Items -->
            <div class="pizza-list">

                <% for(let pizza of Object.values(session.cart.items)) { %>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/images/<%= pizza.item.image %>" alt="">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= pizza.item.name %>
                            </h1>
                            <span>
                                <%= pizza.item.size %>
                            </span>
                        </div>
                        <span class="flex-1">
                            <%= pizza.qty %> Pcs
                        </span>
                        <span class="font-bold text-lg">â‚¹ <%= pizza.item.price * pizza.qty %></span>
                    </div>

                    <% } %>

                        <hr>

                        <!-- Cart total -->
                        <div class="text-right py-4">
                            <div>
                                <span class="text-lg font-bold">Total Amount: </span>
                                <span class="amount text-2xl font-bold ml-2">â‚¹ <%= session.cart.totalPrice %></span>
                            </div>

                            <% if(user){ %>

                                <div>
                                    <form class="mt-12" action="/orders" method="POST" id="payment-form">
                                        <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                                            placeholder="Phone Number" required>
                                        <input name="address" class="border border-gray-400 p-2 w-1/2" type="text"
                                            placeholder="Address" required>
                                        <div>
                                            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"
                                                type="submit">Order
                                                Now</button>
                                        </div>
                                    </form>
                                </div>

                                <% } else {%>

                                    <a class="btn-primary text-white inline-block cursor-pointer px-6 py-2 rounded-full font-bold mt-6"
                                        href="/login">Login to Continue</a>

                                    <% } %>

                        </div>
            </div>
            <% } else {%>

                <!-- Empty Cart -->
                <div class="empty-cart py-16">
                    <div class="container mx-auto text-center">
                        <h1 class="text-3xl font-bold mb-2">Cart EmptyðŸ˜•</h1>
                        <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet. <br>
                            To order a pizza,go to the main page.</p>
                        <img class="mx-auto w-2/5" src="/images/empty-cart.png" alt="empty-cart">
                        <a class="inline-block px-6 py-2 rounded-full btn-primary font-bold text-white mt-12"
                            href="/">Go back</a>
                    </div>
                </div>

                <% } %>


</section>